{
  "name": "staticwebserver",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:react\"",
    "dev:server": "tsx watch server/server.ts",
    "dev:react": "npm --prefix client/react run dev",
    "dev:html": "npm --prefix client/html run dev",
    "build": "npm run build:server && npm run build:react",
    "build:server": "tsc -p server/tsconfig.json",
    "build:react": "npm --prefix client/react run build",
    "build:html": "npm --prefix client/html run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@fastify/static": "^8.2.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.4.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.3",
    "concurrently": "^9.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}